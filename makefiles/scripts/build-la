#!/bin/sh
# Script to generate a .la file so libtool can cope with dlls generated by
# other means.

dllname=$1
version=$2
base=$3
libs=$4

cat << EOF
# lib$dllname.la - a fake libtool library file
# Generated by libtool
#
# XXX: Generated by the mingw support makefile framework, NOT ltmain.sh;
#      The line above is simply there to spoof versions of ltmain that inspect
#      this .la file for the 'generated by libtool' line;

dlname='../bin/lib$dllname.dll'
library_names='lib$dllname.dll.a'
old_library='lib$dllname.a'
dependency_libs='$libs'
current=$version
age=0
revision=0
installed=yes
shouldnotlink=no
dlopen=''
dlpreopen=''
libdir='$base/work/lib'
EOF

